---
import '@fontsource-variable/onest'
import Logo from '../components/Logo.astro'

import {getI18N} from '../i18n/'
const {currentLocale} = Astro
const i18n = getI18N({currentLocale})
---
<section class="text-white text-xl text-left px-20 max-w-[73ch] text-pretty mx-auto my-24">
 <Logo class="w-11 mb-10 m-auto text-white"/>
  <h1 class="text-4xl md:text-5xl font-semibold text-center text-wrap mx-auto mb-10 tracking-tighter ">
    {i18n.INTRO_TITLE} <br> {i18n.ITRO_TITLE_AFTER_BR}
  </h1>
  <p class="pb-9 max-w-[73ch] tracking-wide font-extralight">
    {i18n.INTRO_DESCRIPTION1} <strong class="font-extrabold"> {i18n.INTRO_DESCRIPTION1_STRONG1} </strong> 
    {i18n.INTRO_DESCRIPTION1_1} <strong class="font-extrabold"> {i18n.INTRO_DESCRIPTION1_STRONG2} </strong>
  </p>
  <p class="pb-9 max-w-[73ch] tracking-wide font-extralight">
    {i18n.INTRO_DESCRIPTION2}
    <strong class="font-extrabold"> {i18n.INTRO_DESCRIPTION2_STRONG1} </strong>
  </p>
  <p class="pb-9 max-w-[73ch] tracking-wide font-extralight">
    {i18n.INTRO_DESCRIPTION3}
    <strong class="font-extrabold"> {i18n.INTRO_DESCRIPTION3_STRONG1} </strong>
  </p>
</section>
