---
const {title, subtitle} = Astro.props
---

<article class={`${Astro.props.class} group overflow-hidden relative rounded-xl backdrop-blur-md border border-black/10 shadow-inner shadow-white/10`}>
  <div class="absolute z-10 bottom-0 top-0 w-full h-full bg-gradient-to-b from-transparent via-black/20 to-black/80"></div>
  <slot name="image"/>
  <div class="relative select-none flex flex-col gap-1 p-6 text-lg z-20 justify-end h-full">
    <h2 class="text-3xl font-semibold text-balance mb-4">{title}</h2>
    {subtitle && <h3 class="text-3xl font-semibold text-sky-200/80 -mt-4 mb-4"> {subtitle}</h3> }
    <slot name="content"/>
  </div>
</article>
